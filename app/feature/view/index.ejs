<div id="scene" class="position-absolute"></div>
<div id="overlay" class="position-absolute w-100 h-100">
    <div id="store" class="position-relative w-100 h-100" style="opacity: 0;">
        <div id="header" class="position-absolute top-0 start-0 end-0 p-3">
            <div class="position-relative w-100" style="height: fit-content;">
                <div class="text-sm-center text-wrap w-75 mx-sm-auto">
                    <h1 id="store-name" class="mb-1 fw-bold">Store</h1>
                    <h6 class="m-0"><span id="cloth-name">Cloth</span> / <span id="variant-name">Variant</span></h6>
                </div>
                <div id="btn-container" class="position-absolute top-50 end-0 translate-middle-y"></div>
                <!--                        <button id="toggle-ar" class="btn btn-secondary position-absolute top-50 end-0 translate-middle-y">AR</button>-->
            </div>
        </div>
        <div id="controls" class="position-absolute bottom-0 start-0 end-0">
            <div id="reset" class="mb-4 d-none d-flex justify-content-center">
                <button class="btn btn-outline-secondary">Reset Placement</button>
            </div>
            <div id="variant" class="slider mx-auto mb-4">
                <div class="items"></div>
            </div>
            <div id="cloth" class="slider mx-auto mb-5">
                <div class="items"></div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
         aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <!-- <button type="button" class="btn btn-primary">Understood</button> -->
                </div>
            </div>
        </div>
    </div>
    <div id="guide" class="position-absolute w-100 h-100 top-0 bottom-0 d-none d-flex justify-content-center align-items-center" style="opacity: 0; background-color: rgba(0,0,0,0.5)">
        <p class="w-75 text-wrap text-light text-center"></p>
    </div>
</div>
<div id="progress" class="position-absolute w-100 h-100">
    <div class="bg-light w-100 h-100 d-flex justify-content-center align-items-center">
        <div class="progress w-75">
            <div class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>
</div>
<script type="text-template" id="slider-item">
    <div class='position-relative'>
        <img class="position-absolute top-0 start-0" src="[%= url || '' %]">
        <div class='spinner position-absolute top-50 start-50 translate-middle' style="opacity: 0; width: 0%; height: 0%;">
            <div class='circle'></div>
        </div>
    </div>
</script>